<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="nogari.loginrestapi.service.impl.OracleMyBatisMapper">
   
    <select id="selectEmpList" parameterType="nogari.loginrestapi.vo.OracleMyBatisVo" resultType="nogari.loginrestapi.vo.OracleMyBatisVo">
        SELECT * 
          FROM USER_INFO_MDJ
         WHERE 1=1
        <if test="id!= null and id!=''">
           AND ID = #{id}
        </if>
    </select>

    <select id="selectCountEmp" parameterType="nogari.loginrestapi.vo.OracleMyBatisVo" resultType="int">
        SELECT COUNT(*) AS CNT 
          FROM USER_INFO_MDJ
         WHERE ID = #{id}
    </select>

    <select id="selectCountEmpPw" parameterType="nogari.loginrestapi.vo.OracleMyBatisVo" resultType="int">
        SELECT COUNT(*) AS CNT 
          FROM USER_INFO_MDJ
         WHERE ID = #{id}
           AND PW = #{pw}
    </select>
    
</mapper>